//// -- LEVEL 1
//// -- Tables and References

Table product {
  id uuid [pk]
  flavour varchar
  price float8
  created_at datetime
}

Table order {
  id uuid  [pk]
  user_id uuid [ref: > customer.id]
  status varchar
  created_at datetime
}

Table customer {
  id uuid [pk]
  lastname varchar
  name varchar
  age int
  address varchar
  created_at datetime
}

Table item {
  order_id uuid [ref: > order.id]
  product_id uuid [ref: > product.id]
  quantity int [default: 1]
  size int
}

